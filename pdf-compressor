    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // DOM elements
            const fileInput = document.getElementById('fileInput');
            const uploadArea = document.getElementById('uploadArea');
            const compressBtn = document.getElementById('compressBtn');
            const compressionLevel = document.getElementById('compressionLevel');
            const qualitySlider = document.getElementById('quality');
            const qualityValue = document.getElementById('qualityValue');
            const optimizeFor = document.getElementById('optimizeFor');
            const resultsSection = document.getElementById('results');
            const spinner = document.getElementById('spinner');
            
            // Result elements
            const originalFileName = document.getElementById('originalFileName');
            const originalSize = document.getElementById('originalSize');
            const originalSize2 = document.getElementById('originalSize2');
            const originalPages = document.getElementById('originalPages');
            const compressedFileName = document.getElementById('compressedFileName');
            const compressedSize = document.getElementById('compressedSize');
            const compressedSize2 = document.getElementById('compressedSize2');
            const compressedPages = document.getElementById('compressedPages');
            const savings = document.getElementById('savings');
            const downloadBtn = document.getElementById('downloadBtn');
            
            // Quality level names
            const qualityLevels = ['Low', 'Medium', 'High', 'Extreme'];
            
            let currentFile = null;
            
            // Update quality value display
            qualitySlider.addEventListener('input', function() {
                const level = parseInt(this.value) - 1;
                qualityValue.textContent = qualityLevels[level];
                compressionLevel.selectedIndex = level;
            });
            
            // Update slider when select changes
            compressionLevel.addEventListener('change', function() {
                qualitySlider.value = this.selectedIndex + 1;
                qualityValue.textContent = qualityLevels[this.selectedIndex];
            });
            
            // Handle drag and drop
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                this.classList.add('active');
            });
            
            uploadArea.addEventListener('dragleave', function() {
                this.classList.remove('active');
            });
            
            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                this.classList.remove('active');
                
                if (e.dataTransfer.files.length) {
                    handleFileSelect(e.dataTransfer.files[0]);
                }
            });
            
            // Handle click to browse
            uploadArea.addEventListener('click', function() {
                fileInput.click();
            });
            
            fileInput.addEventListener('change', function() {
                if (this.files.length) {
                    handleFileSelect(this.files[0]);
                }
            });
            
            // Handle file selection
            function handleFileSelect(file) {
                if (!file.name.toLowerCase().endsWith('.pdf')) {
                    alert('Please select a PDF file');
                    return;
                }
                
                if (file.size > 50 * 1024 * 1024) { // 50MB limit
                    alert('File size exceeds 50MB limit. Please choose a smaller file.');
                    return;
                }
                
                currentFile = file;
                compressBtn.disabled = false;
                
                // Display file info
                originalFileName.textContent = file.name;
                originalSize.textContent = formatFileSize(file.size);
                originalSize2.textContent = formatFileSize(file.size);
                originalPages.textContent = '-'; // Would be calculated in real implementation
                
                // Hide previous results
                resultsSection.style.display = 'none';
            }
            
            // Compress button click handler
            compressBtn.addEventListener('click', function() {
                if (!currentFile) return;
                
                spinner.style.display = 'block';
                compressBtn.disabled = true;
                
                // Get compression settings
                const quality = qualitySlider.value;
                const optimization = optimizeFor.value;
                
                // Simulate compression (in a real app, you'd use a PDF processing library)
                setTimeout(() => {
                    simulateCompression(currentFile, quality, optimization);
                    spinner.style.display = 'none';
                    compressBtn.disabled = false;
                }, 2000);
            });
            
            // Simulate PDF compression (replace with actual compression in production)
            function simulateCompression(file, quality, optimization) {
                // Calculate simulated compressed size based on quality level
                let compressionRatio;
                switch(quality) {
                    case '1': // Low
                        compressionRatio = 0.8 + Math.random() * 0.1; // 80-90%
                        break;
                    case '2': // Medium
                        compressionRatio = 0.6 + Math.random() * 0.15; // 60-75%
                        break;
                    case '3': // High
                        compressionRatio = 0.4 + Math.random() * 0.15; // 40-55%
                        break;
                    case '4': // Extreme
                        compressionRatio = 0.2 + Math.random() * 0.15; // 20-35%
                        break;
                    default:
                        compressionRatio = 0.6;
                }
                
                // Adjust based on optimization target
                if (optimization === 'web' || optimization === 'email') {
                    compressionRatio *= 0.9; // Additional 10% reduction
                }
                
                const compressedFileSize = Math.max(file.size * compressionRatio, 1024); // At least 1KB
                
                // Update UI with simulated results
                compressedFileName.textContent = file.name.replace('.pdf', '_compressed.pdf');
                compressedSize.textContent = formatFileSize(compressedFileSize);
                compressedSize2.textContent = formatFileSize(compressedFileSize);
                compressedPages.textContent = originalPages.textContent; // Same page count
                
                const savingsPercent = ((file.size - compressedFileSize) / file.size * 100).toFixed(1);
                savings.textContent = `${savingsPercent}%`;
                
                // Set up download (in real app this would be the actual compressed file)
                downloadBtn.href = URL.createObjectURL(new Blob(['Simulated compressed PDF file'], { type: 'application/pdf' }));
                downloadBtn.download = compressedFileName.textContent;
                
                // Show results
                resultsSection.style.display = 'block';
                
                // Scroll to results
                resultsSection.scrollIntoView({ behavior: 'smooth' });
            }
            
            // Helper function to format file size
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }
        });
    </script>
    
